# PROJECT ROOT/.env.example
#
# Example environment variables file for the application.
# Copy this to .env and replace values with your own configuration.


# Development mode
# Set the environment to 'development' or 'production'
NODE_ENV=development

# Frontend port
# Port for the frontend application to run on
FRONTEND_PORT=3000

# Backend port
# Port for the backend application to run on
BACKEND_PORT=3001

# JWT Secret
# The secret key for JWT authentication (Change this in production for security reasons!)
JWT_SECRET=yourjwtsecretkey

# Google OAuth credentials
# Replace with your own Google OAuth Client ID and Client Secret
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# SSL/HTTPS certificates
# Path to the SSL certificate and key for production (ensure they are correct)
SSL_CERTIFICATE=/etc/nginx/certs/cert.pem
SSL_CERTIFICATE_KEY=/etc/nginx/certs/key.pem

# CORS settings
# List of allowed origins for Cross-Origin Resource Sharing (CORS)
CORS_ORIGIN=http://localhost:3000

# Database file path
# Path to the SQLite database file
DATABASE_PATH=./db/transcendence.sqlite

# File upload directory
# Path to store uploaded files
UPLOAD_DIRECTORY=./uploads

# Avatar upload directory
# Path to store user avatars
AVATAR_DIRECTORY=./uploads/avatars

# Maximum file upload size (in bytes)
# Limit the size of file uploads (default is 5MB)
MAX_UPLOAD_SIZE=5242880
