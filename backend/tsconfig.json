/*
BACKEND: backend/tsconfig.json

This file configures TypeScript compiler settings for the backend application.
It specifies how TypeScript should compile the code.
*/


{
  "compilerOptions":
  {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "removeComments": false,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": "./src",
    "paths": { "*": ["*"] }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
